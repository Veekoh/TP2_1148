<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/js/bootstrap-5.3.0-alpha-dist/js/bootstrap.min.js")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="Acceuil">
                    <img src="~/Content/Image/Logo.png" alt="logo" width="30" height="24" class="d-inline-block align-text-top" /> Biblioth&egrave;que Lavoie
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link" aria-current="page" href="Acceuil">Acceuil</a>
                        <a class="nav-link" href="CollectionLivres">Collections des Livres</a>
                        <a class="nav-link" href="Membres">Liste des Membres</a>
                        <a class="nav-link" href="Pret">Pr&ecirc;t</a>
                        <a class="nav-link" href="Retard">Retard</a>
                    </div>
                </div>
            </div>
        </nav>

    <div class=" body-content">
        @RenderBody()
        <hr />


        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
