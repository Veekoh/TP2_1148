@model System.Data.DataTable
@{
    ViewBag.Title = "CollectionLivres";
}

<h2>Collection de livre</h2>
<br />
<p><a href="@Url.Action("CreateLivres", "Livres")">Ajouter un livre &agrave; la collection</a></p>
<br />

<table class="table  table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Id du Livre</th>
            <th scope="col">Titre</th>
            <th scope="col">Auteur</th>
            <th scope="col">Categorie</th>
            <th scope="col">Modifier</th>
            <th scope="col">Suprimer</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][0]</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>
                <td>
                    <a href="@Url.Action("EditLivre", "Livres", new { @id = Model.Rows[i][0]})"><img src="~/Content/Image/Modifier.png" alt="Modifier" width="10" height="10" /></a>
                </td>
                <td>
                    <a href="@Url.Action("DeleteLivre", "Livres", new { @id = Model.Rows[i][0]})"><img src="~/Content/Image/Suprimer.png" alt="Suprimer" width="10" height="10" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>