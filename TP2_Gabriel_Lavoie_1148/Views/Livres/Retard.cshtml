@model System.Data.DataTable
@{
    ViewBag.Title = "Membres";
}

<h2>Retard</h2>

<table class="table  table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Id du retard</th>
            <th scope="col">Id du livre</th>
            <th scope="col">Id du membre</th>
            <th scope="col">Id du pr&ecirc;t</th>
            <th scope="col">Date du retard</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][0]</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>
                <td>@Model.Rows[i][4]</td>
            </tr>
        }
    </tbody>
</table>